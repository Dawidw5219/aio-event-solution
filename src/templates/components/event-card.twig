{# Event Card Component #}
{# Usage: {% include 'components/event-card.twig' with {event: event} %} #}

<article class="aio-events-card bg-white rounded-2xl overflow-hidden shadow-lg hover:shadow-xl transition-shadow duration-300">
	<a href="{{ event.link }}" class="block">
		{% if event.thumbnail %}
			<div class="aspect-video overflow-hidden">
				<img src="{{ event.thumbnail.src('medium') }}" alt="{{ event.title }}" class="w-full h-full object-cover">
			</div>
		{% endif %}
		
		<div class="p-6">
			{% set event_date = event.meta('_aio_event_start_date') %}
			{% set event_time = event.meta('_aio_event_start_time') %}
			{% set categories = event.terms('aio_event_category') %}
			
			{# Category badges #}
			{% if categories %}
				<div class="mb-3 flex flex-wrap gap-2">
					{% for category in categories %}
						{% include 'components/category-badge.twig' with {category: category} %}
					{% endfor %}
				</div>
			{% endif %}
			
			<h3 class="text-xl font-bold text-gray-900 mb-2 hover:text-blue-600 transition-colors">
				{{ event.title }}
			</h3>
			
			{% set event_subtitle = event.meta('_aio_event_subtitle') %}
			{% if event_subtitle %}
				<p class="text-gray-600 mb-4 line-clamp-2">
					{{ event_subtitle }}
				</p>
			{% endif %}
			
			{% if event_date %}
				<div class="flex items-center gap-2 text-sm text-gray-500">
					<svg class="w-4 h-4" fill="none" stroke="currentColor" viewbox="0 0 24 24">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
					</svg>
					<span>{{ event_date|date('d.m.Y') }}</span>
					{% if event_time %}
						<span>â€¢</span>
						<span>{{ event_time }}</span>
					{% endif %}
				</div>
			{% endif %}
		</div>
	</a>
</article>

