{# Category Badge Component #}
{# Usage: {% include 'components/category-badge.twig' with {category: category, transparent: true} %} #}
{# transparent: true - removes background, uses only text color (for use on colored backgrounds) #}

	{% if category %}
	{% set bg_color = function('get_term_meta', category.id, 'category_bg_color', true) %}
	{% set text_color = function('get_term_meta', category.id, 'category_text_color', true) %}

	{# Default colors if not set #}
		{% if not bg_color %}
	{% set bg_color = '#2271b1' %}
	{% endif %}
		{% if not text_color %}
	{% set text_color = '#ffffff' %}
	{% endif %}

	{# If transparent mode, only use text color with border or outline #}
		{% if transparent|default(false) %}
			<a href="{{ category.link }}" class="aio-events-category-badge inline-block px-4 py-2 rounded-full text-sm font-semibold transition-all hover:opacity-90 border-2" style="color: {{ text_color }}; border-color: {{ text_color }}; background-color: transparent;"> {{ category.name }}
		</a>
	{% else %}
		<a href="{{ category.link }}" class="aio-events-category-badge inline-block px-4 py-2 rounded-full text-sm font-semibold transition-all hover:opacity-90" style="background-color: {{ bg_color }}; color: {{ text_color }};">
			{{ category.name }}
		</a>
	{% endif %}
{% endif %}
